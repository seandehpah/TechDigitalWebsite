{
  "buildCommand": "echo 'Building static site...'",
  "outputDirectory": ".",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.+\\.[a-z]+)$",
      "dest": "/$1"
    },
    {
      "src": "/(.+)\\.html$",
      "dest": "/$1/"
    },
    {
      "src": "/(.*)/$",
      "dest": "/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1.html"
    }
  ]
}